<?xml version="1.0" encoding="UTF-8"?>
<x:description xmlns:x="http://www.daisy.org/ns/xprocspec"
               xmlns:px="http://www.daisy.org/ns/pipeline/xproc"
               xmlns:pxi="http://www.daisy.org/ns/pipeline/xproc/internal"
               xmlns:dc="http://purl.org/dc/elements/1.1/"
               xmlns:pef="http://www.daisy.org/ns/2008/pef"
               script="../../main/resources/xml/xml-to-pef.convert.xpl">
  
  <x:scenario label="test_01">
    <x:call step="px:xml-to-pef.convert">
      <x:input port="source">
        <x:document type="inline">
          <doc xml:lang="en">
            <head>
              <style media="embossed" type="text/css">
                @page { size: 20 7; @bottom-right { content: counter(braille-page) }}
                head { display: none }
                h {
                  display: block;
                  page-break-before: always;
                }
                toc entry {
                  display: block;
                  content: target-text(attr(ref))
                           leader('⠤')
                           target-counter(attr(ref), braille-page)
                }
              </style>
            </head>
            <body>
              <toc>
                <entry ref="h1"/>
                <entry ref="h2"/>
              </toc>
              <h xml:id="h1"> foo </h>
              <h xml:id="h2"> bar </h>
            </body>
          </doc>
        </x:document>
      </x:input>
      <x:input port="translators">
        <x:document type="file" href="../../main/resources/xml/translation/generic-liblouis-translate.xsl"/>
      </x:input>
      <x:input port="metadata">
        <x:document type="inline">
          <empty/>
        </x:document>
      </x:input>
      <x:option name="temp-dir" select="$temp-dir"/>
    </x:call>
    <x:context label="result">
