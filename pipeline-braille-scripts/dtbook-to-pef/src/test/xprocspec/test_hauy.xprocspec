<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://www.daisy.org/ns/xprocspec/xprocspec.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?>
<x:description xmlns:x="http://www.daisy.org/ns/xprocspec" xmlns:p="http://www.w3.org/ns/xproc"
  xmlns:px="http://www.daisy.org/ns/pipeline/xproc"
  script="../../main/resources/xml/xproc/dtbook-to-pef.xpl">

  <x:scenario label="test_01">

    <x:call step="px:dtbook-to-pef">
      <x:input port="source">
        <x:document type="file" href="../resources/hauy_valid.xml"/>
      </x:input>

      <x:option name="include-preview" select="'true'"/>
      <x:option name="include-brf" select="'true'"/>
      <x:option name="output-dir" select="concat($temp-dir,'output-dir/')"/>
      <x:option name="temp-dir" select="concat($temp-dir,'temp-dir/')"/>
      <x:option name="default-stylesheet" select="''"/>
      <x:option name="transform" select="''"/>
    </x:call>

    <x:context label="the output directory contents">
      <x:document type="directory" base-uri="temp-dir" href="output-dir/"/>
    </x:context>

    <x:expect label="Exactly PEF file should be present in the output directory" type="xpath"
      test="count(/*/*[ends-with(@name,'.pef')])" equals="1"/>

  </x:scenario>

</x:description>
