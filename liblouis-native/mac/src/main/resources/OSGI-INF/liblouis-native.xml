<?xml version="1.0" encoding="UTF-8"?>
<components xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0">
    <!-- liblouis 32-bit -->
    <scr:component  name="liblouis.dylib (32-bit)" activate="activate">
        <scr:implementation class="org.daisy.pipeline.liblouis.Binary"/>
        <scr:service><scr:provide interface="org.daisy.pipeline.liblouis.Binary"/></scr:service>
        <scr:property name="name" type="String" value="liblouis"/>
        <scr:property name="path" type="String" value="/native/i386/liblouis.dylib"/>
        <scr:property name="os.family" type="String" value="mac"/>
        <scr:property name="os.arch" type="String" value="i386"/>
    </scr:component>
