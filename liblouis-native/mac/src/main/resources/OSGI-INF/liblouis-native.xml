        <scr:property name="name" type="String" value="liblouis"/>
        <scr:property name="path" type="String" value="/native/x86_64/liblouis.dylib"/>
        <scr:property name="os.family" type="String" value="mac"/>
        <scr:property name="os.arch" type="String" value="x86_64"/>
    </scr:component>
