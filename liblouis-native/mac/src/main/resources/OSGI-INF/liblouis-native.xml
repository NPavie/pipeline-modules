    <scr:component  name="liblouisutdml.dylib (32-bit)" activate="activate">
        <scr:implementation class="org.daisy.pipeline.liblouis.Binary"/>
        <scr:service><scr:provide interface="org.daisy.pipeline.liblouis.Binary"/></scr:service>
        <scr:property name="name" type="String" value="liblouisutdml"/>
        <scr:property name="path" type="String" value="/native/i386/liblouisutdml.dylib,
                                                       /native/i386/liblouis.dylib,
                                                       /native/fat/libxml2.2.dylib,
                                                       /native/fat/libiconv.2.dylib,
                                                       /native/fat/libz.1.dylib"/>
        <scr:property name="os.family" type="String" value="mac"/>
        <scr:property name="os.arch" type="String" value="i386"/>
    </scr:component>
