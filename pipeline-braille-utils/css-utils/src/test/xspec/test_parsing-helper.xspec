<?xml version="1.0" encoding="UTF-8"?>
<x:description xmlns:x="http://www.jenitennison.com/xslt/xspec"
               xmlns:css="http://www.daisy.org/ns/pipeline/braille-css"
               stylesheet="../../main/resources/xml/parsing-helper.xsl">
	
	<x:scenario label="test_01">
		<x:call function="css:get-declarations">
			<x:param select="('@page { size: 40 25;}', '{display:block}')"/>
			<x:param select="'@page'"/>
		</x:call>
		<x:expect label="result" select="' size: 40 25;'"/>
	</x:scenario>
	
	<x:scenario label="test_02">
		<x:call function="css:get-declarations">
			<x:param select="('@page { size: 40 25;}', '{display:block}')"/>
			<x:param select="()"/>
		</x:call>
		<x:expect label="result" select="'display:block'"/>
	</x:scenario>
	
	<x:scenario label="test_03" >
		<x:call function="css:tokenize-stylesheet">
			<x:param select="'::before { content: &quot; } &quot; }
			                 {display:block}
			                 @page { size: 40 25 @top-right-corner { content: &quot; } &quot; }}'"/>
		</x:call>
		<x:expect label="result" select="('::before { content: &quot; } &quot; }',
		                                 '{display:block}',
		                                 '@page { size: 40 25 @top-right-corner { content: &quot; } &quot; }}')"/>
	</x:scenario>
	
	<!--
	    FIXME: Saxon bug. Fixed in v9.5.1.1
	-->
	<x:scenario label="test_04" pending="true">
		<x:call function="css:tokenize-stylesheet">
			<x:param select="'@page { size: 15 15; @bottom-right { content: counter(braille-page, lower-roman) }'"/>
		</x:call>
		<x:expect label="result" select="('@bottom-right { content: counter(braille-page, lower-roman) }')"/>
	</x:scenario>
	
	<x:scenario label="test_05">
		<x:call function="css:get-value">
			<x:param select="/foo">
				<foo style="display: list-item;"/>
			</x:param>
			<x:param select="'display'"/>
			<x:param select="false()"/>
			<x:param select="false()"/>
			<x:param select="false()"/>
		</x:call>
		<x:expect label="result" select="'list-item'"/>
	</x:scenario>
	
</x:description>
