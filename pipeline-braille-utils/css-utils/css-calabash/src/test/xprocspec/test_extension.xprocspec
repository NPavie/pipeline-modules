<?xml version="1.0" encoding="UTF-8"?>
<x:description xmlns:x="http://www.daisy.org/ns/xprocspec"
               xmlns:css="http://www.daisy.org/ns/pipeline/braille-css"
               script="../resources/inline.xpl">
  
  <x:scenario label="test_01">
    <x:call step="css:inline">
      <x:input port="source">
        <x:document type="inline">
          <document>
            <head>
              <style media="embossed" type="text/css">
                p.foo-bar { foo: bar; }
              </style>
            </head>
            <body>
              <p class="foo-bar"/>
            </body>
          </document>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result" select="//body"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <body>
          <p class="foo-bar"/>
        </body>
      </x:document>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_02">
    <x:call step="css:inline">
      <x:input port="source">
        <x:document type="inline">
          <document>
            <head>
              <style media="embossed" type="text/css">
                p.foo-bar { -obfl-foo: bar; }
              </style>
            </head>
            <body>
              <p class="foo-bar"/>
            </body>
          </document>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result" select="//body"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <body>
          <p class="foo-bar" style="-obfl-foo: bar;"/>
        </body>
      </x:document>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_03" pending="not supported yet">
    <x:call step="css:inline">
      <x:input port="source">
        <x:document type="inline">
          <document>
            <head>
              <style media="embossed" type="text/css">
                p.display-foo { display: -obfl-foo; }
              </style>
            </head>
            <body>
              <p class="display-foo"/>
            </body>
          </document>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result" select="//body"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <body>
          <p class="display-foo" style="display: -obfl-foo"/>
        </body>
      </x:document>
    </x:expect>
  </x:scenario>
  
</x:description>
