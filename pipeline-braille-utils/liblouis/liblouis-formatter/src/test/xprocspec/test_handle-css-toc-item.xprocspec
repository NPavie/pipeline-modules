<?xml version="1.0" encoding="UTF-8"?>
<x:description xmlns:x="http://www.daisy.org/ns/xprocspec"
               xmlns:pxi="http://www.daisy.org/ns/pipeline/xproc/internal"
               xmlns:css="http://www.daisy.org/ns/pipeline/braille-css"
               script="test_handle-css-toc-item.xpl">
  
  <x:scenario label="test_01">
    <x:call step="pxi:test-handle-css-toc-item">
      <x:input port="source">
        <x:document type="inline">
          <doc>
            <toc>
              <entry ref="h1" css:display="toc-item"/>
            </toc>
            <h xml:id="h1">
              <span>foo</span>bar
            </h>
          </doc>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <doc>
          <toc>
            <entry ref="h1" css:display="toc-item"/>
          </toc>
          <h xml:id="h1" css:target="true">
            <span>foo</span>bar
          </h>
        </doc>
      </x:document>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_02">
    <x:call step="pxi:test-handle-css-toc-item">
      <x:input port="source">
        <x:document type="inline">
          <doc>
            <toc>
              <entry ref="h1" css:display="toc-item"/>
            </toc>
          </doc>
        </x:document>
        <x:document type="inline">
          <doc>
            <h xml:id="h1">
              foobar
            </h>
          </doc>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <doc>
          <toc>
            <entry ref="h1" css:display="toc-item" />
          </toc>
        </doc>
      </x:document>
      <x:document type="inline">
        <doc>
          <h xml:id="h1" css:target="true">
            foobar
          </h>
        </doc>
      </x:document>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_03">
    <x:call step="pxi:test-handle-css-toc-item">
      <x:input port="source">
        <x:document type="inline">
          <doc>
            <toc>
              <entry ref="h_1" css:display="toc-item"/>
            </toc>
            <h xml:id="h1">
              <span>foo</span>bar
            </h>
          </doc>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <doc>
          <toc>
            <entry ref="h_1" css:display="block"/>
          </toc>
          <h xml:id="h1">
            <span>foo</span>bar
          </h>
        </doc>
      </x:document>
    </x:expect>
  </x:scenario>
  
</x:description>
