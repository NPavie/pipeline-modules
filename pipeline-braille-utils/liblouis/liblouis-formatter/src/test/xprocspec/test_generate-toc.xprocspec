<?xml version="1.0" encoding="UTF-8"?>
<x:description xmlns:x="http://www.daisy.org/ns/xprocspec"
               xmlns:c="http://www.w3.org/ns/xproc-step"
               xmlns:pxi="http://www.daisy.org/ns/pipeline/xproc/internal"
               xmlns:css="http://www.daisy.org/ns/pipeline/braille-css"
               xmlns:louis="http://liblouis.org/liblouis"
               script="test_generate-toc.xpl">
  
  <x:scenario label="test_01">
    <x:call step="pxi:test-generate-toc">
      <x:input port="source">
        <x:document type="inline">
          <toc xml:base="file:/users/me/toc.xml">
            <css:block>
              <css:target-text target="h1"/>
              <css:leader pattern="⠄⠄"/>
              <css:target-counter target="h1" identifier="braille-page"/>
              <css:target-string target="h1" identifier="print-page"/>
            </css:block>
            <css:block>
              <css:target-text target="h2"/>
              <css:leader pattern="⠄⠄"/>
              <css:target-counter target="h2" identifier="braille-page"/>
              <css:target-string target="h2" identifier="print-page"/>
            </css:block>
            <h xml:id="h1"> foo </h>
            <h xml:id="h2"> bar </h>
            <louis:page-layout>
              <c:param-set>
                <c:param name="louis:page-width" value="30"/>
              </c:param-set>
            </louis:page-layout>
          </toc>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <toc xml:base="file:/users/me/toc.xml">
          <louis:div css:display="block" style="left: 0; right: 0.0">
            <louis:toc href="file:/users/me/toc.xml" width="30" print-page="true" braille-page="true" leader="⠄⠄">
              <louis:toc-item ref="h1" style="left:0.0; text-indent:0.0"/>
              <louis:toc-item ref="h2" style="left:0.0; text-indent:0.0"/>
            </louis:toc>
          </louis:div>
          <h xml:id="h1">foo</h>
          <h xml:id="h2">bar</h>
          <louis:page-layout>
            <c:param-set>
              <c:param name="louis:page-width" value="30"/>
            </c:param-set>
          </louis:page-layout>
        </toc>
      </x:document>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_02">
    <x:call step="pxi:test-generate-toc">
      <x:input port="source">
        <x:document type="inline">
          <toc xml:base="file:/users/me/toc.xml">
            <css:block>
              <css:target-text target="h1"/>
              <css:target-string target="h1" identifier="print-page"/>
            </css:block>
            <css:block>
              <css:target-text target="h2"/>
              ..
              <css:target-string target="h2" identifier="print-page"/>
            </css:block>
            <css:block>
              <css:target-text target="h3"/>
              <css:target-string target="h3" identifier="print-page"/>
            </css:block>
            <louis:print-page>1</louis:print-page>
            <h xml:id="h1"> foo </h>
            <louis:print-page>2</louis:print-page>
            <h xml:id="h2"> bar </h>
            <louis:page-layout>
              <c:param-set>
                <c:param name="louis:page-width" value="30"/>
              </c:param-set>
            </louis:page-layout>
          </toc>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <toc xml:base="file:/users/me/toc.xml">
          <louis:div css:display="block" style="left: 0; right: 0.0">
            <louis:toc href="file:/users/me/toc.xml" width="30" print-page="true">
              <louis:toc-item ref="h1" style="left:0.0; text-indent:0.0"/>
            </louis:toc>
          </louis:div>
          <css:block>
              <css:target-text> bar </css:target-text>
              ..
              <css:target-string>2</css:target-string>
            </css:block>
          <css:block>
              <css:target-text/>
              <css:target-string/>
          </css:block>
          <louis:print-page>1</louis:print-page>
          <h xml:id="h1"> foo </h>
          <louis:print-page>2</louis:print-page>
          <h xml:id="h2"> bar </h>
          <louis:page-layout>
            <c:param-set>
              <c:param name="louis:page-width" value="30"/>
            </c:param-set>
          </louis:page-layout>
        </toc>
      </x:document>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_03">
    <x:call step="pxi:test-generate-toc">
      <x:input port="source">
        <x:document type="inline">
          <toc xml:base="file:/users/me/toc.xml">
            <css:block style="left: 0">
              <css:target-text target="h1"/>
            </css:block>
            <css:block style="left: 2">
              <css:target-text target="h2"/>
            </css:block>
            <css:block style="right: 2">
              <css:target-text target="h3"/>
            </css:block>
            <h xml:id="h1"> foo </h>
            <h xml:id="h2"> bar </h>
            <h xml:id="h3"> baz </h>
            <louis:page-layout>
              <c:param-set>
                <c:param name="louis:page-width" value="30"/>
              </c:param-set>
            </louis:page-layout>
          </toc>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <toc xml:base="file:/users/me/toc.xml">
          <louis:div css:display="block" style="left: 0; right: 0.0">
            <louis:toc href="file:/users/me/toc.xml" width="30">
              <louis:toc-item ref="h1" style="left:0; text-indent:0.0"/>
              <louis:toc-item ref="h2" style="left:2; text-indent:0.0"/>
            </louis:toc>
          </louis:div>
          <louis:div css:display="block" style="left: 0; right: 2.0">
            <louis:toc href="file:/users/me/toc.xml" width="28">
              <louis:toc-item ref="h3" style="left:0.0; text-indent:0.0"/>
            </louis:toc>
          </louis:div>
          <h xml:id="h1"> foo </h>
          <h xml:id="h2"> bar </h>
          <h xml:id="h3"> baz </h>
          <louis:page-layout>
            <c:param-set>
              <c:param name="louis:page-width" value="30"/>
            </c:param-set>
          </louis:page-layout>
        </toc>
      </x:document>
    </x:expect>
  </x:scenario>
  
</x:description>
