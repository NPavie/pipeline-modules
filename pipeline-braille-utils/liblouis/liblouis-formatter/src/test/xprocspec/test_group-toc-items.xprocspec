<?xml version="1.0" encoding="UTF-8"?>
<x:description xmlns:x="http://www.daisy.org/ns/xprocspec"
               xmlns:pxi="http://www.daisy.org/ns/pipeline/xproc/internal"
               xmlns:c="http://www.w3.org/ns/xproc-step"
               xmlns:css="http://www.daisy.org/ns/pipeline/braille-css"
               xmlns:louis="http://liblouis.org/liblouis"
               script="test_group-toc-items.xpl">
  
  <x:scenario label="test_01">
    <x:call step="pxi:test-group-toc-items">
      <x:input port="source">
        <x:document type="inline">
          <doc xml:base="file:/home/me/doc.xml">
            <toc>
              <entry ref="h1" css:display="toc-item" style="left: 2; text-indent: 0.0"/>
              <div>
                <entry ref="h2" css:display="toc-item" style="left: 4; text-indent: 0.0"/>
              </div>
              <louis:print-page>i</louis:print-page>
            </toc>
            <h xml:id="h1"> foo </h>
            <h xml:id="h2"> bar </h>
            <louis:page-layout>
              <c:param-set>
                <c:param name="louis:page-width" value="30"/>
              </c:param-set>
            </louis:page-layout>
          </doc>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <doc xml:base="file:/home/me/doc.xml">
          <toc>
            <louis:div css:display="block" style="left:0">
              <louis:toc href="file:/home/me/doc.xml" width="30">
                <louis:toc-item ref="h1" style="left: 2; text-indent: 0.0"/>
                <louis:toc-item ref="h2" style="left: 4; text-indent: 0.0"/>
              </louis:toc>
            </louis:div>
            <louis:print-page>i</louis:print-page>
          </toc>
          <h xml:id="h1"> foo </h>
          <h xml:id="h2"> bar </h>
          <louis:page-layout>
            <c:param-set>
              <c:param name="louis:page-width" value="30"/>
            </c:param-set>
          </louis:page-layout>
        </doc>
      </x:document>
    </x:expect>
  </x:scenario>
  
