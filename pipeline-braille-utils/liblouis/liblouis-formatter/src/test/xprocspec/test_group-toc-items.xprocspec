          <h xml:id="h1"> foo </h>
          <louis:page-layout>
            <c:param-set>
              <c:param name="louis:page-width" value="30"/>
            </c:param-set>
          </louis:page-layout>
        </doc>
      </x:document>
      <x:document type="inline">
        <doc xml:base="file:/home/me/doc/section_2.xml">
          <h xml:id="h2"> bar </h>
          <louis:page-layout>
            <c:param-set>
