<?xml version="1.0" encoding="UTF-8"?>
<x:description xmlns:x="http://www.daisy.org/ns/xprocspec"
               xmlns:pxi="http://www.daisy.org/ns/pipeline/xproc/internal"
               xmlns:louis="http://liblouis.org/liblouis"
               xmlns:css="http://www.daisy.org/ns/pipeline/braille-css"
               script="../../main/resources/xml/normalize-space.xpl">
  
  <x:scenario label="test_01">
    <x:call step="pxi:normalize-space">
      <x:input port="source">
        <x:document type="inline">
<doc>
  <div louis:style="div">
    xxx   xxx
    xxx   xxx
  </div>
</doc>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare" normalize-space="false">
      <x:document type="inline">
<doc>
  <div louis:style="div"> xxx xxx xxx xxx </div>
</doc>
      </x:document>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_02">
    <x:call step="pxi:normalize-space">
      <x:input port="source">
        <x:document type="inline">
<doc>
  <div louis:style="div" xml:space="preserve">
    xxx   xxx
    xxx   xxx
  </div>
</doc>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare" normalize-space="false">
      <x:document type="inline">
<doc>
  <div louis:style="div" xml:space="preserve">&#x00A0;<louis:line-break/>&#x00A0;   xxx   xxx<louis:line-break/>&#x00A0;   xxx   xxx<louis:line-break/>&#x00A0;&#x00A0;</div>
</doc>
      </x:document>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_03">
    <x:call step="pxi:normalize-space">
      <x:input port="source">
        <x:document type="inline">
<doc>
  <div louis:style="div">
    xxx
    <span>xxx</span>
    <span css:target="true">xxx</span>
  </div>
</doc>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare" normalize-space="false">
      <x:document type="inline">
<doc>
  <div louis:style="div"> xxx xxx <span css:target="true">xxx</span> </div>
</doc>
      </x:document>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_04">
    <x:call step="pxi:normalize-space">
      <x:input port="source">
        <x:document type="inline">
<doc>
  <div louis:style="div">
    xxx
  </div>
  xxx
  <span>xxx</span>
  <div louis:style="div">
    xxx
    <div louis:style="div">
      xxx
    </div>
  </div>
  xxx
</doc>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare" normalize-space="false">
      <x:document type="inline">
<doc>
  <div louis:style="div"> xxx </div><louis:block> xxx xxx </louis:block><div louis:style="div"><louis:block> xxx </louis:block><div louis:style="div"> xxx </div>
  </div> xxx </doc>
      </x:document>
    </x:expect>
  </x:scenario>
  
</x:description>
