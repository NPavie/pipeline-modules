<?xml version="1.0" encoding="utf-8"?>
<x:description xmlns:x="http://www.jenitennison.com/xslt/xspec"
               xmlns:louis="http://liblouis.org/liblouis"
               xmlns:css="http://www.daisy.org/ns/pipeline/braille-css"
               stylesheet="../../main/resources/xml/handle-css-margin.xsl">
  
  <x:param name="louis:page-width" select="'20'"/>
  
  <x:scenario label="test_001">
    <x:context>
      <doc>
        <louis:div css:display="block">
          <louis:border style="⠒"/>
          <body css:display="block">
            <p>foo</p>
          </body>
          <louis:border style="⠒"/>
        </louis:div>
      </doc>
    </x:context>
    <x:expect label="result">
      <doc>
        <louis:div css:display="block">
          <louis:border>⠒⠒⠒⠒⠒⠒⠒⠒⠒⠒⠒⠒⠒⠒⠒⠒⠒⠒⠒⠒</louis:border>
          <body css:display="block">
            <p>foo</p>
          </body>
          <louis:border>⠒⠒⠒⠒⠒⠒⠒⠒⠒⠒⠒⠒⠒⠒⠒⠒⠒⠒⠒⠒</louis:border>
        </louis:div>
      </doc>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_002">
    <x:context>
      <doc>
        <louis:div css:display="block"
                   style="margin-left:1.0;
                          margin-top:1.0;">
          <louis:border style="⠒"/>
          <body css:display="block"
                style="margin-left:1.0;
                       margin-top:1.0;">
            <p>foo</p>
          </body>
        </louis:div>
      </doc>
    </x:context>
    <x:expect label="result">
      <doc>
        <louis:div css:display="block"
                   style="margin-top:1.0; left:1.0">
          <louis:border>⠒⠒⠒⠒⠒⠒⠒⠒⠒⠒⠒⠒⠒⠒⠒⠒⠒⠒⠒</louis:border>
          <body css:display="block"
                style="margin-top:1.0; left:2.0">
            <p>foo</p>
          </body>
        </louis:div>
      </doc>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_003">
    <x:context>
      <doc>
        <louis:div css:display="block">
          <louis:box border-top="⠒"
                     border-bottom="none"
                     border-left="⠇"
                     border-right="none">
            <body css:display="block">
              <p>foo</p>
            </body>
          </louis:box>
        </louis:div>
      </doc>
    </x:context>
    <x:expect label="result">
      <doc>
        <louis:div css:display="block">
          <louis:box border-top="⠒" border-bottom="none" border-left="⠇" border-right="none" width="19">
            <body css:display="block">
              <p>foo</p>
            </body>
          </louis:box>
        </louis:div>
      </doc>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_004">
    <x:context>
      <doc>
        <louis:div css:display="block"
                   style="margin-top:1.0">
          <louis:box border-top="⠒"
                     border-bottom="none"
                     border-left="⠇"
                     border-right="none">
            <body css:display="block"
                  style="margin-left:1.0;
                         margin-bottom:1.0;">
              <p>foo</p>
            </body>
          </louis:box>
        </louis:div>
      </doc>
    </x:context>
    <x:expect label="result">
      <doc>
        <louis:div css:display="block"
                   style="margin-top:1.0">
          <louis:box border-top="⠒" border-bottom="none" border-left="⠇" border-right="none" width="19">
            <body css:display="block"
                  style="margin-bottom:1.0; left:1.0">
              <p>foo</p>
            </body>
          </louis:box>
        </louis:div>
      </doc>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_005">
    <x:context>
      <doc>
        <body css:display="block"
              style="left: 5;
                     margin-left:1;">
          <p>foo</p>
        </body>
      </doc>
    </x:context>
    <x:expect label="result">
      <doc>
        <body css:display="block"
              style="left:6.0">
          <p>foo</p>
        </body>
      </doc>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_006">
    <x:context>
      <doc>
        <louis:div css:display="block"
                   style="margin-left: 2;">
          <louis:box border-top="none"
                     border-bottom="none"
                     border-left="none"
                     border-right="none">
            <body css:display="block"
                  style="margin-left: 1;
                         text-indent: -4;">
              <p>foo</p>
            </body>
          </louis:box>
        </louis:div>
      </doc>
    </x:context>
    <x:expect label="result">
      <doc>
        <louis:div css:display="block"
                   style="left:2.0">
          <louis:box border-top="none" border-bottom="none" border-left="none" border-right="none" width="18">
            <body css:display="block"
                  style="left:1.0; text-indent:-1.0">
              <p>foo</p>
            </body>
          </louis:box>
        </louis:div>
      </doc>
    </x:expect>
  </x:scenario>
  
</x:description>
