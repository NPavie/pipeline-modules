<?xml version="1.0" encoding="UTF-8"?>
<x:description xmlns:x="http://www.daisy.org/ns/xprocspec"
               xmlns:louis="http://liblouis.org/liblouis"
               script="hyphenate.xpl">
  
  <!-- ======= -->
  <!-- test_01 -->
  <!-- ======= -->
  <!--
      
  -->
  <x:scenario label="test_01">
    <x:call step="louis:hyphenate">
      <x:param name="table" select="resolve-uri('../resources/foobar.cti,foobar.dic')"/>
      <x:param name="text" select="'foobar'"/>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="xpath" test="string(/*)='foo&#xAD;bar'"/>
  </x:scenario>
  
  <!-- ======= -->
  <!-- test_02 -->
  <!-- ======= -->
  <!--
      
  -->
  <x:scenario label="test_02">
    <x:call step="louis:hyphenate">
      <x:param name="table" select="resolve-uri('../resources/foobar.cti,foobar.dic')"/>
      <x:param name="text" select="'foo-bar'"/>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="xpath" test="string(/*)='foo-&#x200B;bar'"/>
  </x:scenario>
  
</x:description>
