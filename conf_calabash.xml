<!--*- nxml -*-->
<xproc-config xmlns="http://xmlcalabash.com/ns/configuration"
	      xmlns:px="http://www.daisy.org/ns/pipeline/xproc"
	      xmlns:cxl="http://xmlcalabash.com/ns/extensions/liblouisxml"
	      xmlns:cxb="http://xmlcalabash.com/ns/extensions/brailleutils"
>

<implementation type="px:copy" class-name="com.xmlcalabash.extensions.fileutils.Copy"/>
<implementation type="px:delete" class-name="com.xmlcalabash.extensions.fileutils.Delete"/>
<implementation type="px:info" class-name="com.xmlcalabash.extensions.fileutils.Info"/>
<implementation type="px:mkdir" class-name="com.xmlcalabash.extensions.fileutils.Mkdir"/>
<implementation type="px:zip" class-name="com.xmlcalabash.extensions.Zip"/>

<implementation type="cxb:emboss-pef"
                class-name="org.daisy.common.xproc.calabash.steps.brailleutils.EmbossPEF"/>
<implementation type="cxb:pef-to-text"
                class-name="org.daisy.common.xproc.calabash.steps.brailleutils.PEF2Text"/>
<implementation type="cxb:text-to-pef"
                class-name="org.daisy.common.xproc.calabash.steps.brailleutils.Text2PEF"/>
<implementation type="cxb:validate-pef"
                class-name="org.daisy.common.xproc.calabash.steps.brailleutils.ValidatePEF"/>

<implementation type="cxl:format-braille"
                class-name="org.daisy.common.xproc.calabash.steps.liblouisxml.FormatBraille"/>

</xproc-config>
