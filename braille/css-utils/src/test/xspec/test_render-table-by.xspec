  <!--
      Simple table: data cells only
      
      The table is rendered row by row.
  -->
  <x:scenario label="by-row">
    <x:call function="css:render-table-by">
      <x:param select="'row'"/>
      <x:param>
        <table xmlns="http://www.w3.org/1999/xhtml">
          <tr>
            <td>Cell 1.1</td>
            <td>Cell 1.2</td>
            <td>Cell 1.3</td>
          </tr>
          <tr>
            <td>Cell 2.1</td>
            <td>Cell 2.2</td>
            <td>Cell 2.3</td>
          </tr>
          <tr>
            <td>Cell 3.1</td>
            <td>Cell 3.2</td>
            <td>Cell 3.3</td>
          </tr>
        </table>
      </x:param>
    </x:call>
    <x:expect label="result">
      <table xmlns="http://www.w3.org/1999/xhtml">
        <css:table-by axis="row">
          <css:list-item>
            <td>Cell 1.1</td>
            <td>Cell 1.2</td>
            <td>Cell 1.3</td>
          </css:list-item>
          <css:list-item>
            <td>Cell 2.1</td>
            <td>Cell 2.2</td>
            <td>Cell 2.3</td>
