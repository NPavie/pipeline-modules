            <th axis="type-of-place" css:table-header-policy="always">Mountains</th>
          </tr>
          <tr>
            <th axis="area" rowspan="2">Earth</th>
            <th axis="sub-area">Europe</th>
            <td>Copenhagen</td>
            <td>Brussels</td>
            <td>Mont Blanc</td>
