<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" activate="activate" deactivate="deactivate" name="Liblouis provider and table registry">
    <implementation class="org.daisy.pipeline.braille.liblouis.LiblouisProvider"/>
    <scr:service>
        <scr:provide interface="org.daisy.pipeline.braille.liblouis.LiblouisTableFinder"/>
    </scr:service>
    <scr:reference bind="addTablePath"
        unbind="removeTablePath"
        interface="org.daisy.pipeline.braille.liblouis.LiblouisTablePath"
        cardinality="0..n"
        name="LiblouisTablePath"
        policy="dynamic"/>
    <scr:reference bind="addBinary"
        unbind="removeBinary"
        interface="org.daisy.pipeline.braille.Binary"
        cardinality="0..n"
        name="LiblouisBinary"
        policy="dynamic"/>
</scr:component>
