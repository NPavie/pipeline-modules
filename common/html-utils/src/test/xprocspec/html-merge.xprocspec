<?xml version="1.0" encoding="UTF-8"?>
<x:description xmlns:x="http://www.daisy.org/ns/xprocspec"
               xmlns:px="http://www.daisy.org/ns/pipeline/xproc"
               xmlns:d="http://www.daisy.org/ns/pipeline/data"
               xmlns:epub="http://www.idpf.org/2007/ops"
               script="../../main/resources/xml/xproc/html-merge.xpl">

    <x:scenario label="test">
        <x:call step="px:html-merge">
            <x:input port="source">
                <x:document type="inline" xml:base="part1.html">
                    <html xmlns="http://www.w3.org/1999/xhtml">
                        <body epub:type="frontmatter">
                            <a href="part2.html#x"/>
                        </body>
                    </html>
                </x:document>
                <x:document type="inline" xml:base="part2.html">
                    <html xmlns="http://www.w3.org/1999/xhtml">
                        <body epub:type="bodymatter">
                            <a id="x"/>
                        </body>
                    </html>
                </x:document>
                <x:document type="inline" xml:base="part3.html">
                    <html xmlns="http://www.w3.org/1999/xhtml">
                        <body epub:type="bodymatter"/>
                    </html>
                </x:document>
            </x:input>
            <x:option name="output-base-uri" select="resolve-uri('merged.html')"/>
        </x:call>
        <x:context label="the result">
            <x:document type="port" port="result"/>
        </x:context>
        <x:expect label="the result" type="compare">
            <x:document type="inline">
                <html xmlns="http://www.w3.org/1999/xhtml">
                    <head/>
                    <body>
                        <section epub:type="frontmatter">
                            <a href="merged.html#x"/>
                        </section>
                        <section epub:type="bodymatter">
                            <a id="x"/>
                        </section>
                        <section epub:type="bodymatter"/>
                    </body>
                </html>
            </x:document>
        </x:expect>
        <x:context label="the mapping">
            <x:document type="port" port="mapping"/>
        </x:context>
        <x:expect label="should be as expected"
                  type="custom" href="http://www.daisy.org/pipeline/modules/fileset-utils/library.xpl" step="x:fileset-compare">
            <x:document type="inline">
                <d:fileset>
                    <d:file href="merged.html" original-href="part1.html"/>
                    <d:file href="merged.html" original-href="part2.html"/>
                    <d:file href="merged.html" original-href="part3.html"/>
                </d:fileset>
            </x:document>
        </x:expect>
    </x:scenario>

</x:description>
